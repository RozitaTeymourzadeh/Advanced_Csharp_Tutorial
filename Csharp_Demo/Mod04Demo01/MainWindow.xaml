<Window x:Class="Mod04Demo01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mod04Demo01"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170*"/>
            <ColumnDefinition Width="89*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="constructors" Content="Constructors" HorizontalAlignment="Left" VerticalAlignment="Top" Width="154" Height="53" Click="constructors_Click" Margin="0,10,0,0"/>
        <Button x:Name="statics" Content="Statics" HorizontalAlignment="Left" Margin="159,0,0,248.8" VerticalAlignment="Bottom" Width="177" Height="53" Click="statics_Click"/>
        <ListBox x:Name="customerList" HorizontalAlignment="Left" Height="231" Margin="0,90,0,-0.2" VerticalAlignment="Top" Width="251" SelectionChanged="customerList_SelectionChanged"/>
        <TextBox x:Name="details" HorizontalAlignment="Left" Height="231" Margin="251,0,0,-0.2" TextWrapping="Wrap" VerticalAlignment="Bottom" Width="267" Grid.ColumnSpan="2"/>
        <Button x:Name="generic" Content="Generic" HorizontalAlignment="Left" VerticalAlignment="Top" Width="177" Margin="0,10,0,0" Height="53" Grid.Column="1"/>

    </Grid>
</Window>
