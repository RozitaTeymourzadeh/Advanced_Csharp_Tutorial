<Window x:Class="Mod08Demo03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mod08Demo03"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="get_data" Content="Get Data" HorizontalAlignment="Left" VerticalAlignment="Top" Width="138" Height="48" Click="get_data_Click"/>
        <ListBox x:Name="customerList" HorizontalAlignment="Left" Height="268" Margin="0,53,0,-0.2" VerticalAlignment="Top" Width="246" SelectionChanged="customerList_SelectionChanged"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="246,53,0,-0.2" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="268" Width="272"/>
        <Button x:Name="query_data" Content="Query Data" HorizontalAlignment="Left" Margin="143,0,0,0" VerticalAlignment="Top" Width="145" Height="48" Click="query_data_Click"/>
        <Button x:Name="update_data" Content="Update Data" HorizontalAlignment="Left" Height="48" Margin="293,0,0,0" VerticalAlignment="Top" Width="155" Click="update_data_Click"/>

    </Grid>
</Window>
