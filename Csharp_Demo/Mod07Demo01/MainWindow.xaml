<Window x:Class="Mod07Demo01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mod07Demo01"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="get_data" Content="Get Data" HorizontalAlignment="Left" VerticalAlignment="Top" Width="167" Height="43" Click="get_data_Click"/>
        <Button x:Name="read_and_modify" Content="Read &amp; Modify" HorizontalAlignment="Left" VerticalAlignment="Top" Width="167" Height="43" Margin="176,0,0,0" Click="read_and_modify_Click"/>
        <Button x:Name="query_data" Content="Query Data" HorizontalAlignment="Left" VerticalAlignment="Top" Width="167" Height="43" Margin="351,0,0,0" Click="query_data_Click"/>
        <ListBox x:Name="customerList" HorizontalAlignment="Left" Height="273" Margin="0,48,0,-0.2" VerticalAlignment="Top" Width="250" SelectionChanged="customerList_SelectionChanged"/>
        <TextBlock x:Name="details" HorizontalAlignment="Left" Margin="250,49,0,-0.2" TextWrapping="Wrap" VerticalAlignment="Top" Height="272" Width="268"/>

    </Grid>
</Window>
