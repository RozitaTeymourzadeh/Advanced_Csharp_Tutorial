<Window x:Class="Mod03Demo02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mod03Demo02"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="27" Margin="0,10,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="518"/>
        <TextBox x:Name="customerName" HorizontalAlignment="Left" Height="38" Margin="0,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="518" TextChanged="customerName_TextChanged"/>
        <Button x:Name="Update" Content="Update" HorizontalAlignment="Left" Margin="0,85,0,0" VerticalAlignment="Top" Width="518" Height="28" Click="Update_Click"/>
        <ListBox x:Name="activity" HorizontalAlignment="Left" Height="203" Margin="0,118,0,-0.2" VerticalAlignment="Top" Width="518" SelectionChanged="activity_SelectionChanged"/>

    </Grid>
</Window>
